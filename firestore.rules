
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to players for leaderboards, etc.
    // Allow anyone to update/create player data for this dev environment.
    match /players/{playerId} {
      allow read, write;
    }

    // Allow anyone to create, read, and update battles for this dev environment.
    match /battles/{battleId} {
      allow read, write;
    }
  }
}
