
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Players: Allow public read for leaderboards/profiles, but only allow a user to write to their own document.
    match /players/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Battles:
    // - Allow any authenticated user to create a new battle.
    // - Only allow players involved in the battle to read or update it.
    match /battles/{battleId} {
      allow read: if request.auth != null && (
      	resource.data.player1.id == request.auth.uid || 
        (resource.data.player2 != null && resource.data.player2.id == request.auth.uid)
      );
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
      	resource.data.player1.id == request.auth.uid ||
        (resource.data.player2 != null && resource.data.player2.id == request.auth.uid)
      );
    }
  }
}
